<div class="container">
    <div class="card">
        <img src="{{movie.image}}" alt="{{movies.title}}" />
    </div>
    <div class="content">
        <p>Title: {{movie.title}}</p>
        <p>Director: {{movie.director}}</p>
        <p>Stars: </p>
        <ul>
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        <p>{{#each movie.showtimes}}
            <span>{{this}}</span>
            {{#unless @last}}
            <span>| </span>
            {{/unless}}
            {{/each}}
        </p>
    </div>
</div>
</div>